<%- include('partials/header') -%>

<%- include('partials/navbar') -%>
<%- include('components/alerts') -%>

<div class="customers-section">

    <div class="customer header">
        <div class="cus-info"><h5>NAME</h5></div>
        <div class="cus-info"><h5>ACCOUNT_NO</h5></div>
        <div class="cus-info"><h5>BRANCH</h5></div>
        <div class="cus-info"><h5>BALANCE</h5></div>
    </div>

    <div class="outer">

        <% for(let i=0;i<accounts.length;i++){ %>
    <div class="customer" onclick="location.href='/account/<%= accounts[i].account_no %>'" style="cursor:pointer;">
        <div class="cus-info"><h5><span class="data">NAME: </span><%= accounts[i].name %></h5></div>
        <div class="cus-info"><h5><span class="data">ACC_NO:</span><%= accounts[i].account_no %></h5></div>
        <div class="cus-info"><h5><span class="data">BRANCH:</span><%= accounts[i].ifsc %></h5></div>
        <div class="cus-info"><h5><span class="data">BALANCE:</span> $<%= accounts[i].balance %></h5></div>
    </div>
        <% } %>
    </div> 
</div>


<%- include('partials/footer') -%>